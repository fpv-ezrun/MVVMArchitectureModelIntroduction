<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:layout_below="@+id/multiple2"
        android:id="@+id/IdTraining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        android:hint="Id du Training"/>
    <TextView
        android:id="@+id/multiple2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:text="Id du Training:"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <TextView

        android:layout_below="@+id/IdTraining"
        android:id="@+id/multiple3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Description du Training:"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <EditText
        android:layout_below="@+id/multiple3"
        android:id="@+id/Description_Training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="text"
        android:hint="Description du Training"/>

    <Button

        android:id="@+id/buttonChercher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="0dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:background="@android:color/holo_blue_light"
        android:text="Ajouter le Training"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>